# Slack API Konfigürasyonu
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_STARTUP_CHANNEL=#general
ADMIN_CHANNEL_ID=C12345678

# Proje Bilgileri
GITHUB_REPO=https://github.com/SİZİN_KULLANICI_ADINIZ/cemil-bot

# Groq API (LLM ve RAG için)
GROQ_API_KEY=gsk_your-groq-api-key

# E-posta Konfigürasyonu (Anonim Geri Bildirim için - Gmail SMTP)
SMTP_EMAIL=your-bot-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
ADMIN_EMAIL=admin@example.com

# Veritabanı (SQLite)
DB_PATH=cemil.db

# Bot Ayarları
LOG_LEVEL=INFO
ADMIN_SLACK_ID=U02...

# Başlangıç Otomasyonu (True/False)
# Bot başladığında sorulan soruların otomatik cevabını belirler.
DB_CLEAN_ON_STARTUP=false
DB_IMPORT_INITIAL_USERS=false
KB_REBUILD_INDEX=false
SLACK_SEND_WELCOME_MESSAGE=false

